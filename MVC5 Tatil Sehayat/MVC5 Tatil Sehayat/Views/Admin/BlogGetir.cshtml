@model MVC5_Tatil_Sehayat.Models.Sınıflar.Blog
@{
    ViewBag.Title = "BlogGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<br />
<h2>Blog Getir Ve Güncelle</h2>
<br />
@using (Html.BeginForm("BlogGuncelle", "Admin", FormMethod.Post))
{
<div class="form-group">
    <label>Blog Başlıgı</label>
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
    <br />
    <label>Blog Tarihi</label>
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
    <br />
    <label>Blog Açıklama</label>
    @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
    <br />
    <label>Blog Resim Linki</label>
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
    <br />
    @Html.HiddenFor(x => x.ID)

    <button class="btn btn-success" id="btn1">Güncelle</button>
    <script>
        $('#btn1').click(function () {
            alert("Blog Güncellendi")
        })
    </script>
</div>
}
